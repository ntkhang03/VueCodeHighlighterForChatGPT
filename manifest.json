{
	"manifest_version": 3,
	"name": "Vue Code Highlighter For ChatGPT",
	"author": "NTKhang",
	"version": "1.2",
	"description": "A browser extension to highlight Vue.js code snippets in ChatGPT conversations.",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"scripting"
	],
	"background": {},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon-128.png",
			"32": "icons/icon-128.png",
			"48": "icons/icon-128.png",
			"64": "icons/icon-128.png",
			"96": "icons/icon-128.png",
			"128": "icons/icon-128.png",
			"196": "icons/icon-128.png",
			"256": "icons/icon-128.png"
		}
	},
	"icons": {
		"16": "icons/icon-128.png",
		"32": "icons/icon-128.png",
		"48": "icons/icon-128.png",
		"64": "icons/icon-128.png",
		"96": "icons/icon-128.png",
		"128": "icons/icon-128.png",
		"196": "icons/icon-128.png",
		"256": "icons/icon-128.png"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"assets/js/*.js",
				"assets/css/*.css"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*",
		"file:///*"
	]
}